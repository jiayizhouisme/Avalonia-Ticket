<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="GetStartedApp.Views.ConfirmationDialog">
	<Grid>
		<Border Background="#FFFFFF" BorderBrush="#D0D0D0" BorderThickness="1" CornerRadius="5">
			<StackPanel Margin="10">
				<TextBlock Text="{Binding DataContext.Title, RelativeSource={RelativeSource AncestorType=UserControl}}" FontWeight="Bold" Margin="0 0 0 10"/>
				<TextBlock Text="{Binding DataContext.Message, RelativeSource={RelativeSource AncestorType=UserControl}}" Margin="0 0 0 20"/>
				<StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
					<Button Content="{Binding DataContext.Button1Text, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            Command="{Binding DataContext.OkCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            Margin="0 0 10 0" Padding="5 2"/>
					<Button Content="{Binding DataContext.Button2Text, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            Command="{Binding DataContext.CancelCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            Margin="0 0 0 10" Padding="5 2"/>
				</StackPanel>
			</StackPanel>
		</Border>
	</Grid>
</UserControl>